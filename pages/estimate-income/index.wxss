/* pages/estimate-income/index.wxss */
.nav-tabs{
   width: 100%;
   height: 75rpx;
   display: flex;  
   background: #fff;
   border-bottom:1px solid #D6D6D6;
}
.tab-content{
  flex: 1;
}
.default{
    line-height:75rpx;
    text-align:center;
    flex:1;
    color:#282828;
    font-size:30rpx;  
}
.active{
    line-height:75rpx;
    text-align:center;
    color:#FE6260;
    flex:1;
    border-bottom:2px solid #FE6260;
    font-size:30rpx;
}
.show{
    display:block;
    flex: 1;
}
.hidden{
    display:none;
    flex: 1;
}
.time-interval{
    line-height: 80rpx;
    height:80rpx;
     font-size: 34rpx;
    color:#6C6C6C;
    padding: 0 30rpx;
    font-weight:bold;
}
.form-chart{
    background: #fff;
      margin-bottom:40rpx;
}
.form-chart .form-chart-title {
    display: flex;
    padding: 0 30rpx;
    border-bottom:1px solid #F0F0F0;
   

}
.form-chart .form-chart-title view{
    flex:1;
    font-size: 24rpx;
    color:#747474;
    text-align: center;
    padding-top: 20rpx;
    padding-bottom: 50rpx;

}
.form-chart .form-chart-title view text{
    display: block;
}
.form-chart .form-chart-title view .num{
    color:#FE6260;
    padding-bottom: 10rpx;
}
.form-chart-body{
    padding: 0 20rpx;
    padding-top:54rpx;
  
    
}
.form-chart-body .img{
    width:100%;
}
.explain{
    padding: 0 30rpx;
    background: #fff;
}
.explain-title{
    font-size: 30rpx;
    color:#333;
    line-height: 80rpx;
    height:80rpx;
    border-bottom: 1px solid #F1F1F1;
    margin-bottom: 36rpx;
}
.explain-body .pay-num ,.explain-body .income-num{
    padding-bottom: 20rpx;
}
.explain-body .pay-num ,.explain-body .income-num{
    font-size: 30rpx;
    color:#1F1F1F;
   
}
.explain-body .content{
    font-size: 24rpx;
    color:#A9A9A9;
    line-height: 32rpx;
     padding-top: 10rpx;
     letter-spacing:4rpx;
}